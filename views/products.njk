{% extends "index.njk" %}

{% block head %}
    <link href="/css/danh-sach-style.css" rel="stylesheet">
{% endblock %}

{% block content %}
	<section class="container" id="list-page">
		<div class="row mot-hang">
					<a href="" class="big-title">DANH SÁCH ĐIỆN THOẠI</a>
					<span></span>
			</div> <!-- end -row -->
			<!-- THANH TIÊU ĐỀ //////////////////////////////////////////////////////////////////////// -->


		<div class="row">
			<aside class="col-md-3 list-menu-box">
				<ul>
					<li class="menu-box"><span class="title-list sap-xep-title" >SẮP XẾP</span>
						<ul class="sap-xep">
							<li><a href="">Mới nhất</a></li>
							<li><a href="">Bán chạy nhất</a></li>
							<li><a href="">Gía: thấp -> cao</a></li>
							<li><a href="">Giá: cao -> thấp</a></li>
							<li><a href="">Khuyến mại</a></li>
						</ul>
					</li>
					<li class="menu-box"><span class="title-list nhan-hieu-title" >HÃNG SẢN XUẤT</span>
						<ul class="nhan-hieu">
							<li><a href="">APPLE</a></li>
							<li><a href="">SAMSUNG</a></li>
							<li><a href="">SONY</a></li>
							<li><a href="">OPPO</a></li>
							<li><a href="">ASUS</a></li>
							<li><a href="">Các hãng khác</a></li>
						</ul>
					</li>
					<li class="menu-box"><span class="title-list gia-tien-title" >GIÁ TIỀN</span>
						<ul class="gia-tien">
							<li><a href="">Dưới 1 Triệu</a></li>
							<li><a href="">Từ 1 đến 3 triệu</a></li>
							<li><a href="">Từ 3 đến 5 triệu</a></li>
							<li><a href="">Từ 3 đến 7 triệu</a></li>
							<li><a href="">Từ 7 đến 10 triệu</a></li>
							<li><a href="">Từ 10 đến 15 triệu</a></li>
							<li><a href="">Trên 15 triệu</a></li>
						</ul>
					</li>
					<li class="menu-box"><span class="title-list loai-dien-thoai-title" >LOẠI ĐIỆN THOẠI</span>
						<ul class="loai-dien-thoai">
						    {% for item in categories %}
							    <li><a href="/category/{{ item.cat_id }}">{{ item.cat_name }}</a></li>
							{% endfor %}
						</ul>
					</li>
					
					
				</ul>


			</aside> <!-- end list-menu-box -->
			<!-- HẾT CỘT NÀY RỒI  //////////////////////////////////////////////////////////////////////////////////////////// -->


			<div class="col-md-9 col-sm-6">

			    {% for item_p in products %}

                    <div class="col-md-4 col-sm-6">
                        <div class="product-box ph">

                            {% set product_id_current = '' %}

                            {% for item_i in images %}

                                {% if(item_i.product_id != product_id_current) %}
                                    {% if item_i.product_id in item_p.product_id %}
                                        <img src="/images/products/{{ item_i.url_image }}">
                                    {% endif %}
                                    {% set product_id_current = item_i.product_id %}
                                {% endif %}

                            {% endfor %}

                            <div class="name-price">
                                <p class="name-product">{{ item_p.product_name }}</p>
                                <p class="price-product">{{ item_p.price }} VNĐ</p>
                                <div class="info-product info-ph">
                                    <div>
                                        <p>{{ item_p.product_name }}</p>
                                        <p>{{ item_p.price }} VNĐ</p>
                                        <span></span>
                                        <p>Màn hình: 6", Full HD</p>
                                        <p>HĐH: Android 6.0 (Marshmallow)</p>
                                        <p>CPU: Snapdragon 653</p>
                                        <p>Camera: 18 MP, Selfie: 5 MP</p>
                                    </div>
                                    <a href="/product/detail/{{ item_p.product_id }}" class="watch">Xem chi tiết</a>
                                    <span class="buy">Mua hàng</span>
                                    <span class="buy added">Đã thêm vào giỏ hàng</span>
                                    </div><!-- end info-box -->
                            </div><!-- end name-price -->
                        </div><!-- end product-box -->
                    </div>
                {% endfor %}

            </div><!-- end col -->
			<!-- HẾT CỘT NÀY RỒI  //////////////////////////////////////////////////////////////////////////////////////////// -->

			<div class="col-md-12 pagination-box">
				<ul class="pagination">
				    <li class="active"><a href="#">1</a></li>
				    <li><a href="#">2</a></li>
				    <li><a href="#">3</a></li>
				    <li><a href="#">4</a></li>
				    <li><a href="#">5</a></li>
				    <li><a href="#">&gt;</a></li>
				    <li><a href="#">Trang  cuối</a></li>
				  </ul>
			</div><!-- end col -->

		</div><!-- end row -->

	</section>
{% endblock %}