TABLE field_section;

CREATE TABLE field (
	field_id text PRIMARY KEY,
    name text NOT NULL,
    type text NOT NULL,
    description text,
    validation text,
    required boolean,
    field_section_id text,
    FOREIGN KEY (field_section_id)
    	REFERENCES field_section (field_section_id) MATCH FULL
);

