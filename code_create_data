DROP TABLE IF EXISTS product;
DROP TABLE IF EXISTS field;
DROP TABLE IF EXISTS field_section;
DROP TABLE IF EXISTS product_template;

CREATE TABLE product_template (
	product_template_id text PRIMARY KEY,
    name text NOT NULL
);

INSERT INTO product_template (product_template_id, name)
VALUES 	('M01', 'Smart phone'),
		('M02', 'Tivi'),
		('M03', 'Tủ lạnh'),
		('M04', 'Máy giặt'),
		('M05', 'Nồi cơm điện'),
		('M06', 'Điều hòa')
;

TABLE product_template;

CREATE TABLE product (
	product_id text PRIMARY KEY,
    product_name text NOT NULL,
    manufacturer_id text,
    price integer,
    quantity smallint,
    properties text,
    description text,
    madein text,
    promotion text,
    status text,
    product_template_id text,
    FOREIGN KEY (product_template_id)
    	REFERENCES product_template (product_template_id) MATCH FULL
);

CREATE TABLE field_section (
	field_section_id text PRIMARY KEY,
    name text NOT NULL,
    product_template_id text NOT NULL,
    FOREIGN KEY (product_template_id)
    	REFERENCES product_template (product_template_id) MATCH FULL
);

